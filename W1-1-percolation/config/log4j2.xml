<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<File name="FileLogger" fileName="PercolationVisualizer.log"
			append="false">
			<PatternLayout pattern="%d %t %-5p %c{2} - %m%n" />
		</File>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="percolation" level="info">
			<AppenderRef ref="FileLogger" />
		</Logger>
		<Root level="trace">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="FileLogger" />
		</Root>
	</Loggers>
</Configuration>